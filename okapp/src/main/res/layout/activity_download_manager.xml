<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/theme_color" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="我的下载"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@drawable/btn_text_able"
            android:textSize="16sp"
            />


        <Button
            android:id="@+id/down_imgbtn_close"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/btn_close" />

        <TextView
            android:id="@+id/btn_delete_file"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:text="删除"
            android:textColor="@drawable/btn_text_able"
            android:textSize="12sp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_tabs"
        android:layout_width="match_parent"
        android:paddingLeft="30dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingRight="30dp"
        android:layout_height="38dp"
        android:background="#fff"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_donwnloading"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="正下载"
            android:textColor="@drawable/selector_txt_btncolor"
            android:background="@drawable/selector_leftbtn"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_downloaded"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="已下载"
            android:textColor="@drawable/selector_txt_btncolor"
            android:background="@drawable/selector_rightbtn"
            android:textSize="12sp" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</LinearLayout>